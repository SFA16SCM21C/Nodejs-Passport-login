<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3"><i class="fas fa-user-plus">&nbsp;&nbsp;Register</i></h1>
            <%- include ('./partials/messages.ejs') %>
            <form action="/users/register" method="POST">
                <!--name-->
                <div class="form-group" style="margin-top: 10px;">
                    <label for="name">Name</label>
                    <input 
                        type="name"
                        id="name"
                        name="name"
                        class="form-control"
                        placeholder="Enter Name"
                        value="<%= typeof name != 'undefined' ? name : '' %>"
                    />
                </div>

                <!--email-->
                <div class="form-group" style="margin-top: 10px;">
                    <label for="email">Email</label>
                    <input 
                        type="email"
                        id="email"
                        name="email"
                        class="form-control"
                        placeholder="Enter email"
                        value="<%= typeof email != 'undefined' ? email : '' %>"
                    />
                </div>

                <!--password-->
                <div class="form-group" style="margin-top: 10px;">
                    <label for="email">Password</label>
                    <input 
                        type="password"
                        id="password"
                        name="password"
                        class="form-control"
                        placeholder="Create Password"
                        value="<%= typeof email != 'undefined' ? password : '' %>"
                    />
                </div>

                <!--password2-->
                <div class="form-group" style="margin-top: 10px;">
                    <label for="email">Confirm Password</label>
                    <input 
                        type="password"
                        id="password2"
                        name="password2"
                        class="form-control"
                        placeholder="Confirm Password"
                        value="<%= typeof email != 'undefined' ? password2 : '' %>"
                    />
                </div>
                <button type="submit" class="btn btn-primary btn-block" style="width: 100%; margin-top: 20px;">Register</button>
            </form><p class="lead mt-4">Have An Account? <a href="/users/login">Login</a></p>
        </div>
    </div>
</div>